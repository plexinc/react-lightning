{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "public/**",
        "index.html",
        "package.json",
        "vite.config.*",
        "tsconfig.config.*",
        "tsdown.config.*"
      ]
    },
    "clean": {
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["^@plextv/vite-plugin-msdf-fontgen#build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check:types": {
      "cache": false
    }
  },
  "globalEnv": ["BASE_URL", "NODE_ENV"]
}
