{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["packages/**", "apps/**"]
    },
    "build:vite": {
      "dependsOn": ["^build:vite"],
      "outputs": ["dist/**"],
      "inputs": ["packages/**", "apps/**"]
    },
    "build:tsdown": {
      "dependsOn": ["^build:tsdown"],
      "outputs": ["dist/**"],
      "inputs": ["packages/**", "apps/**"]
    },
    "clean": {},
    "build:types": {
      "dependsOn": ["^build:types"]
    },
    "test:unit": {
      "dependsOn": ["^@plextv/vite-plugin-msdf-fontgen#build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check:types": {}
  },
  "globalEnv": ["BASE_URL", "NODE_ENV"]
}
