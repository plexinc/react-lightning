{
  "name": "@plextv/react-native-lightning",
  "description": "@plextv/react-lightning implementation for react-native",
  "version": "0.3.16",
  "author": "Plex Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plexinc/react-lightning.git"
  },
  "bugs": {
    "url": "https://github.com/plexinc/react-lightning/issues/new"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "pnpm run build:tsdown",
    "build:vite": "pnpm run clean && pnpm run build:types && pnpm run build:bundle",
    "build:tsdown": "tsdown",
    "build:bundle": "pnpm run build:prod && pnpm run build:dev",
    "build:prod": "vite build --mode=production",
    "build:dev": "vite build --mode=development",
    "build:types": "tsc --outDir dist/lib --declarationDir dist/types --declaration true --emitDeclarationOnly true",
    "clean": "del ./dist",
    "check:types": "tsc --noEmit",
    "test:unit": "vitest run --passWithNoTests"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@plextv/react-lightning-plugin-css-transform": "workspace:*",
    "@plextv/react-lightning-plugin-flexbox": "workspace:*",
    "its-fine": "^2.0.0",
    "react-native-web": "0.19.13"
  },
  "devDependencies": {
    "@repo/configs": "workspace:*",
    "@types/node": "24.5.1",
    "@types/react": "18.3.14"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^3.0.0-beta14",
    "@plextv/react-lightning": "workspace:^",
    "react": "^18.3.1",
    "react-native": "^0.77.2"
  },
  "peerDependencyRules": {
    "allowedVersions": {
      "react": "^18"
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}
