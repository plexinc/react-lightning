{
  "name": "@plexinc/react-native-lightning",
  "description": "@plexinc/react-lightning implementation for react-native",
  "version": "0.2.4",
  "author": "Plex Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plexinc/react-lightning.git"
  },
  "bugs": {
    "url": "https://github.com/plexinc/react-lightning/issues/new"
  },
  "type": "commonjs",
  "files": [
    "config",
    "dist",
    "react-native.config.js"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {
      ".": {
        "default": "./dist/esm/index.mjs",
        "import": "./dist/esm/index.mjs",
        "require": "./dist/cjs/index.js",
        "types": "./dist/types/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:bundle",
    "build:bundle": "rollup -c --failAfterWarnings",
    "build:types": "tsc --outDir dist/lib --declarationDir dist/types --declaration true --emitDeclarationOnly true",
    "clean": "del ./dist",
    "check:types": "tsc --noEmit",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@plexinc/react-lightning-plugin-css-transform": "workspace:*",
    "@plexinc/react-lightning-plugin-flexbox": "workspace:*"
  },
  "devDependencies": {
    "@lightningjs/renderer": "2.13.2",
    "@plexinc/react-lightning": "workspace:*",
    "@repo/rollup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.13.4",
    "@types/react": "18.3.14",
    "react": "18.3.1",
    "react-native": "0.77.1",
    "react-native-web": "0.19.13",
    "vite": "6.1.0"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^2.5.1",
    "@plexinc/react-lightning": "workspace:*",
    "@react-native-community/cli": "^15.1.2",
    "react": "^18.3.1",
    "react-native": "^0.76.1",
    "react-native-web": "^0.19.13"
  },
  "peerDependencyRules": {
    "allowedVersions": {
      "react": "^18"
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}
